<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E7E7E7"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:visibility="gone"
        android:weightSum="2"
        android:id="@+id/purchasedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:paddingTop="240dp"
            android:paddingRight="150dp"
            android:paddingLeft="150dp"
            android:layout_weight="1"
            android:src="@drawable/coins"
            android:id="@+id/coins"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:id="@+id/linearLayo2t18"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Item Purchased!"
                android:textColor="#36454F"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CREDITS ADDED"
                android:textColor="#36454F"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/loading"
            android:padding="170dp"
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/purchaseLayout"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="end"
                android:src="@drawable/exit"
                android:padding="10dp"
                android:id="@+id/exit"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>


        <ImageView
            android:layout_weight="0.3"
            android:src="@drawable/ouroboros"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:id="@+id/noWifi"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="0.15"
            android:visibility="visible"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Ouroboros AI"
            android:textColor="#36454F"
            android:textSize="23dp" />

        <TextView
            android:layout_weight="0.2"
            android:visibility="visible"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="UPGRADE TO PRO"
            android:textColor="#36454F"
            android:textSize="15dp" />


    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1.7"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:gravity="center"
        android:id="@+id/linearLayout29"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout

            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linearLayout30"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou32"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick1"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="100 Credits Per Month"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick2"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Chat Bot"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou34"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick3"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Image Generation"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou31"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick4"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Image Editor"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" >

            <LinearLayout
                android:background="@drawable/radio_background"
                android:paddingLeft="15dp"
                android:id="@+id/linearLayou36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:background="@android:color/transparent"
                    android:shadowColor="#8036454F"
                    android:buttonTint="#8036454F"
                    android:textColor="#36454F"
                    android:padding="15dp"
                    android:id="@+id/monthly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Billed Monthly\n£11.99/month" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:id="@+id/linearLayou37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:background="@android:color/transparent"
                    android:shadowColor="#8036454F"
                    android:buttonTint="#8036454F"
                    android:textColor="#36454F"
                    android:padding="15dp"
                    android:id="@+id/yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Billed Yearly\n£149/year" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:layout_weight="0.30"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cont"
                android:textColor="#36454F"
                android:text="Continue"
                android:background="@drawable/generate_button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_weight="0.1"
            android:visibility="visible"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="•"
            android:textColor="#36454F"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>