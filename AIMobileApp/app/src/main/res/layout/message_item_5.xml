<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right">


    <androidx.cardview.widget.CardView
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#0F0F0F"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:id="@+id/cardView">


        <LinearLayout
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/codeLayout"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:textColor="#E6E6E6"
                    android:maxEms="24"
                    android:id="@+id/codeType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_mono_regular"
                    android:gravity="top"
                    android:text="Python"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:padding="2dp"
                    android:layout_gravity="end"
                    android:id="@+id/copy"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/copy_grey" />

                <View
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6" />

                <ImageView
                    android:layout_marginStart="10dp"
                    android:padding="2dp"
                    android:layout_gravity="end"
                    android:id="@+id/share"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/share_grey" />

            </LinearLayout>

            <View
                android:layout_marginBottom="10dp"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6" />

            <TextView
                android:textColor="#E6E6E6"
                android:maxEms="24"
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_mono_regular"
                android:gravity="top"
                android:text="num = 5\n\ \n\for i in num:\n\    if num == 5:\n\        print('Hello World!')"
                android:textSize="14dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>