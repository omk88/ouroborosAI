<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E7E7E7"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:visibility="gone"
        android:weightSum="2"
        android:id="@+id/purchasedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:paddingTop="240dp"
            android:paddingRight="150dp"
            android:paddingLeft="150dp"
            android:layout_weight="1"
            android:src="@drawable/coins"
            android:id="@+id/coins"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:id="@+id/linearLayo2t18"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Item Purchased!"
                android:textColor="#36454F"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CREDITS ADDED"
                android:textColor="#36454F"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/loading"
            android:padding="170dp"
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/buyLayout"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="end"
                android:src="@drawable/exit"
                android:padding="10dp"
                android:id="@+id/exit"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>


        <ImageView
            android:layout_weight="0.3"
            android:src="@drawable/ouroboros"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:id="@+id/noWifi"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="0.15"
            android:visibility="visible"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Ouroboros AI"
            android:textColor="#36454F"
            android:textSize="23dp" />

        <TextView
            android:layout_weight="0.2"
            android:visibility="visible"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="PURCHASE CREDITS"
            android:textColor="#36454F"
            android:textSize="15dp" />


    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1.7"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:gravity="center"
        android:id="@+id/linearLayout29"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout

            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:weightSum="4"
            android:layout_weight="0.45"
            android:gravity="center"
            android:id="@+id/linearLayout30"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick2"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Chat Bot"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou34"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick3"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Image Generation"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linearLayou31"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/tick"
                    android:id="@+id/tick4"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="AI Image Editor"
                    android:textColor="#36454F"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp" >

            <LinearLayout
                android:weightSum="2"
                android:background="@android:color/transparent"
                android:paddingLeft="15dp"
                android:id="@+id/credits50Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_weight="1.8"
                    android:background="@android:color/transparent"
                    android:shadowColor="#8036454F"
                    android:buttonTint="#8036454F"
                    android:textColor="#36454F"
                    android:padding="15dp"
                    android:id="@+id/credits50"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="50 Credits\n£6.99" />

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/decreaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Decrease"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <NumberPicker
                    android:visibility="gone"
                    android:id="@+id/quantityPicker"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:max="10"
                    android:min="0"
                    android:orientation="horizontal" />

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/increaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Increase"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="15dp"
                android:id="@+id/credits100Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:background="@android:color/transparent"
                    android:shadowColor="#8036454F"
                    android:buttonTint="#8036454F"
                    android:textColor="#36454F"
                    android:padding="15dp"
                    android:id="@+id/credits100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 Credits\n£13.99" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:id="@+id/credits200Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/credits200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:buttonTint="#8036454F"
                    android:padding="15dp"
                    android:shadowColor="#8036454F"
                    android:text="200 Credits\n£27.99"
                    android:textColor="#36454F" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:id="@+id/credits500Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/credits500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:buttonTint="#8036454F"
                    android:padding="15dp"
                    android:shadowColor="#8036454F"
                    android:text="500 Credits\n£69.99"
                    android:textColor="#36454F" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:layout_weight="0.30"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cont"
                android:textColor="#36454F"
                android:text="Continue"
                android:background="@drawable/generate_button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_weight="0.1"
            android:visibility="visible"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="•"
            android:textColor="#36454F"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>